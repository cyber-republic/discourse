<div class="header">
  <h3 class="title">{{{shareTitle}}}</h3>
</div>

<div class="body">
  {{textarea value=shareUrl class="topic-share-url"}}
  <div class="topic-share-url-for-touch"><a></a></div>

  <div class="sources">
    {{#each sources as |source|}}
      {{share-source source=source title=topic.title action=(action "share")}}
    {{/each}}

    <div class="" style="width: 90%; margin: 0 auto;">
      <span style="display: block; width: 100%; height: 25px; text-align: center;">
        {{i18n "share.weixin_desc"}}
      </span>
      <canvas id='zqw' style="width: 100%;height:100%"></canvas>
    </div>

  </div>
</div>
